<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match-parent"
    android:layout_height="match-parent"
    android:background="@color/background_color">

    <!-- 出发时间输入框 -->
    <EditText
        android:id="@+id/editText_departureTime"
        android:layout_width="match-parent"
        android:layout_height="wrap-content"
        android:hint="请输入出发时间（格式：HH:mm）"
        android:textColor="@color/text_color"
        android:background="@drawable/edit_text_background"
        android:contentDescription="输入出发时间" />

    <!-- 到达时间输入框 -->
    <EditText
        android:id="@+id/editText_arrivalTime"
        android:layout_width="match-parent"
        android:layout_height="wrap-content"
        android:hint="请输入到达时间（格式：HH:mm）"
        android:textColor="@color/text_color"
        android:background="@drawable/edit_text_background"
        android:contentDescription="输入到达时间" />

    <!-- 车站位置输入框 -->
    <EditText
        android:id="@+id/editText_stationLocation"
        android:layout_width="match-parent"
        android:layout_height="wrap-content"
        android:hint="请输入车站位置"
        android:textColor="@color/text_color"
        android:background="@drawable/edit_text_background"
        android:contentDescription="输入车站位置" />

    <!-- 提交按钮 -->
    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap-content"
        android:layout_height="wrap-content"
        android:text="提交"
        android:textColor="@color/button_text_color"
        android:background="@drawable/button_background"
        android:contentDescription="提交输入的车票信息" />

    <!-- 打开设置页面按钮 -->
    <Button
        android:id="@+id/button_settings"
    android:layout_width="wrap-content"
    android:layout_height="wrap-content"
    android:text="设置"
    android:textColor="@color/button_text_color"
    android:background="@drawable/button_background"
    android:contentDescription="打开设置页面" />

    <!-- 预计最长交通用时显示文本框 -->
    <TextView
        android:id="@+id/textView_travelTime"
        android:layout_width="match-parent"
        android:layout_height="wrap-content"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        android:contentDescription="显示预计最长交通用时" />

    <!-- 语音输入按钮 -->
    <Button
        android:id="@+id/button_voiceInput"
        android:layout_width="wrap-content"
        android:layout_height="wrap-content"
        android:text="语音输入"
        android:textColor="@color/button_text_color"
        android:background="@drawable/button_background"
        android:contentDescription="进行语音输入" />

    <!-- 地图显示区域 -->
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match-parent"
        android:layout_height="match-parent">
        <!-- 这里会根据用户选择的地图API动态添加地图视图，比如百度地图的MapView -->
        <!-- 示例：若使用百度地图API，可能需如下添加 -->
        <!-- <com.baidu.mapapi.map.MapView -->
        <!--     android:id="@+id/mapView" -->
        <!--     android:layout_width="match-parent"
        <!--     android:layout_height="match-parent" /> -->
    </FrameLayout>

    <!-- 路线信息显示文本框 -->
    <TextView
        android:id="@+id/textView_routeInfo"
        android:layout_width="match-parent"
        android:layout_height="wrap-content"
        android:textSize="16sp"
        android:textColor="@color/text_color"
        android:contentDescription="显示路线信息" />

    <!-- 活动状态显示文本框 -->
    <TextView
        android:id="@+id/textView_status"
        android:layout_width="match-parent"
        android:layout_height="wrap-content"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        android:contentDescription="显示活动状态提示" />

    <!-- 交通方式选择下拉列表 -->
    <Spinner
        android:id="@+id/spinner_transportMode"
        android:layout_width="match-parent"
        android:layout_height="wrap-content"
        android:prompt="@string/select_transport_mode"
        android:background="@drawable/spinner_background"
        android:contentDescription="选择出行的交通方式" />

    <!-- 用户输入地图API密钥输入框 -->
    <EditText
        android:id="@+id/editText_userInputMapApiKey"
        android:layout_width="match-parent"
        android:layout_height="wrap-content"
        android:textColor="@color/text_color"
        android:background="@drawable/edit_text_background"
        android:contentDescription="输入地图API密钥" />

    <!-- 地图API提供程序选择下拉列表 -->
    <Spinner
        android:id="@+id/spinner_userInputMapApiProvider"
        android:layout_width="match-parent"
        android:layout_height="wrap-content"
        android:prompt="@string/select_map_api_provider"
        android:background="@drawable/spinner_background"
        android:contentDescription="选择地图API提供程序" />

</LinearLayout>
